<script>
  function isElementInViewport(element) {
    const rect = element.getBoundingClientRect();
    const windowHeight = window.innerHeight || document.documentElement.clientHeight;
    return (
      rect.bottom >= 0 &&
      rect.right >= 0 &&
      rect.top <= windowHeight &&
      rect.left <= (window.innerWidth || document.documentElement.clientWidth)
    );
  }

  function playVideoIfInViewport() {
    const video = document.getElementById("FeatureRowImage-16481442229d0f3d7a");
    if (isElementInViewport(video) || video.currentTime > 0) {
      video.play();
      showPauseIcon();
    } else {
      video.pause();
      showPlayIcon();
    }
  }

  function showPlayIcon() {
    const playPauseIcon = document.getElementById("playPauseIcon");
    playPauseIcon.innerHTML = "&#9658;"; // Play symbol
    playPauseIcon.classList.remove("hide");
    setTimeout(() => {
      playPauseIcon.classList.add("hide");
    }, 1000);
  }

  function showPauseIcon() {
    const playPauseIcon = document.getElementById("playPauseIcon");
    playPauseIcon.innerHTML = "&#10074;&#10074;"; // Pause symbol
    playPauseIcon.classList.remove("hide");
    setTimeout(() => {
      playPauseIcon.classList.add("hide");
    }, 1000);
  }

  function toggleVideoPlayPause() {
    const video = document.getElementById("FeatureRowImage-16481442229d0f3d7a");
    if (video.paused) {
      video.play();
      showPauseIcon();
    } else {
      video.pause();
      showPlayIcon();
    }
  }

  const video = document.getElementById("FeatureRowImage-16481442229d0f3d7a");
  video.addEventListener("click", toggleVideoPlayPause);

  window.addEventListener("scroll", playVideoIfInViewport);
</script>