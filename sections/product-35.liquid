    var mql = window.matchMedia("screen and (min-width: 750px)")
    if( mql.matches) {
        $("#stamped-container").detach().appendTo('#desktop_reviews');
    }
});

  $(window).resize(function() {
    var mql = window.matchMedia("screen and (min-width: 750px)")
    if( mql.matches ) {
        $("#stamped-container").detach().appendTo('#desktop_reviews');
    } else {
      $("#stamped-container").detach().appendTo('#mobile_reviews');
    }
});
